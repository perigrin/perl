# __COVER__ skip_test $^O eq "MSWin32" || $] == 5.008007
# __COVER__ skip_reason Fork unreliable

$x = 1;

die unless defined ($pid = fork);

if ($pid)
{
    $x = 2;
    waitpid $pid, 0;
}
else
{
    $x = 3;
}

print "$x: $$\n";
