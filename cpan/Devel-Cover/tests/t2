use strict;
use warnings;

my @x;

sub xx
{
  $x[shift]++;
}

for (0 .. 10)
{
  time &&
    $x[1]++;

  $x[2]++
    if time;

  for (0 .. 2)
  {
      $x[3]++;
  }

  if (time)
  {
    xx(4);
  }
  else
  {
    $x[5]++;
  }
}
